    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "declaration": true,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
